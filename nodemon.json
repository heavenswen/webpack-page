{
    "restartable": "rs",
    "ignore": [
        ".git",
        "node_modules/"
    ],
    "verbose": true,
    "execMap": {
        "js": "webpack-dev-server"
    },
    "events": {
        "start":"webpack-dev-server", 
        "restart": "webpack-dev-server"
    },
    "runOnChangeOnly":true, 
    "watch": [
        "/src/pages/",
        "webpack.config.js"
    ],
    "env": {
        "NODE_ENV": "development",
        "PORT": "3000"
    },
    "ext": "ejs html js",
    "legacy-watch": false
}